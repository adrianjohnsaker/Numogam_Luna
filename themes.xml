<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.LemurianBridge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lemurian_primary</item>
        <item name="colorPrimaryVariant">@color/lemurian_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lemurian_accent</item>
        <item name="colorSecondaryVariant">@color/lemurian_accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text appearance -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Lemurian.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Lemurian.Body1</item>
    </style>

    <style name="TextAppearance.Lemurian.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Lemurian.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Widget.Lemurian.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
</resources>
