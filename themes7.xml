<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AmeliaPhase7" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_variant</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/violet_primary</item>
        <item name="colorSecondaryVariant">@color/violet_primary</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_dim</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/red_primary</item>
        <item name="colorOnError">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        
        <!-- Font -->
        <item name="android:fontFamily">@font/space_grotesk</item>
    </style>
    
    <!-- No Action Bar variant -->
    <style name="Theme.AmeliaPhase7.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
