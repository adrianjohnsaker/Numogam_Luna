<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="4dp">

    <!-- User Message -->
    <LinearLayout
        android:id="@+id/userMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="8dp"
            android:maxWidth="280dp"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/userMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="User message here" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Amelia Message -->
    <LinearLayout
        android:id="@+id/ameliaMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_amelia_avatar"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="top" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:maxWidth="280dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ameliaMessageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        tools:text="Amelia's response here" />

                    <!-- Memory Context Indicator -->
                    <LinearLayout
                        android:id="@+id/memoryContextIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="8dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_memory_small"
                            android:tint="?attr/colorPrimary"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From memory"
                            android:textSize="12sp"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    <!-- System Message (for search results, imports, etc.) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/systemMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorSecondaryContainer"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                android:tint="?attr/colorOnSecondaryContainer"
                android:layout_gravity="top" />

            <TextView
                android:id="@+id/systemMessageText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorOnSecondaryContainer"
                android:textSize="14sp"
                tools:text="System message or search results" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
