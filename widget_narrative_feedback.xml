!-- res/layout/widget_narrative_feedback.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_padding"
    android:background="@drawable/widget_background">
    
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/narrative_feedback_title"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="center"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_small">
        
        <TextView
            android:id="@+id/widget_coherence_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_coherence"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_secondary"/>
        
        <TextView
            android:id="@+id/widget_coherence_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="@dimen/text_small"
            android:textColor="@color/coherence_balance"
            android:textStyle="bold"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_tiny">
        
        <TextView
            android:id="@+id/widget_mythology_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_mythology_depth"
            android:textSize="@dimen/text_small"
            android:textColor="@color/text_secondary"/>
        
        <TextView
            android:id="@+id/widget_mythology_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="@dimen/text_small"
            android:textColor="@color/gold_primary"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="--"
        android:textSize="@dimen/text_tiny"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"/>
    
</LinearLayout>

         
    
